{
  "name": "gdg-webdev-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:api-typing": "npm run build --workspace=@packages/api-typing",
    "build:contracts": "npm run build --workspace=@packages/webdev-api-contracts --workspace=@packages/nexus-api-contracts --workspace=@packages/identity-api-contracts",
    "build:packages": "npm run build:api-typing && npm run build:contracts",
    "postinstall": "npm run build:packages"
  }
}
